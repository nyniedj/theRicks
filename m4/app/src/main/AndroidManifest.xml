<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.cs2340.thericks">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name = "edu.gatech.cs2340.thericks.database.RatTrackerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.LoginActivity"></activity>
        <activity android:name=".controllers.RegisterActivity"></activity>
        <activity android:name=".controllers.RatDataListActivity"></activity>
        <activity android:name=".controllers.RatEntryActivity"></activity>
        <activity android:name=".controllers.DashboardActivity"></activity>
    </application>

</manifest>
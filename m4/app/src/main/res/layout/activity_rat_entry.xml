<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ratbackground">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/rat_data_key_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/unique_key_label" />

        <TextView
            android:id="@+id/rat_data_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_created_label"
            android:layout_weight="0.03" />

        <TextView
            android:id="@+id/rat_data_location_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_type_label"
            android:layout_weight="0.04" />

        <TextView
            android:id="@+id/rat_data_incident_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/address_label" />

        <TextView
            android:id="@+id/rat_data_incident_zip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/zipcode_label" />

        <TextView
            android:id="@+id/rat_data_borough_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/borough_label" />

        <TextView
            android:id="@+id/rat_data_city_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/city_label" />

        <TextView
            android:id="@+id/rat_data_latitude_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/latitude_label" />

        <TextView
            android:id="@+id/rat_data_longitude_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="@string/longitude_label" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>